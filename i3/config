# mode to manage external screens
set $display_mode Ext Screen (v) VGA ON, (d) DVI ON, (x) External OFF
mode "$display_mode" {
    bindsym v exec --no-startup-id xrandr --output DP2-3 --mode 1280x1024 --left-of DP2-2
    bindsym d exec --no-startup-id xrandr --output DP2-2 --mode 1920x1080 --above eDP1
    bindsym x exec --no-startup-id xrandr --output DP2-3 --off --output DP2-2 --off
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+u mode "$display_mode" 


